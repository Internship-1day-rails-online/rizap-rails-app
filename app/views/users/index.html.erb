<h1>ユーザー一覧</h1>

<div class="mx-auto mb-3" style="width: 80%;">
    <table class="table table-striped table-hover limited-width-table text-center">
<div>
    <table>
        <tr>
            <th>
                ID
            </th>
            <th>
                名前
            </th>
        </tr>
        
        <% @users.each do |user| %>
            <tr>
                <th>
                  <%= user.id %>
                </th>
                <th>
                  <%= link_to user.name, user_path(user.id) %>
                    <%= user.id %>
                </th>
                <th>
                    <%= user.name %>
                </th>
            </tr>
        <% end %>
        
    </table>
</div>
